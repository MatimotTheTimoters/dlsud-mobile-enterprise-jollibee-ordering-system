<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChickenActivity">

    <!-- Header/Navbar -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E31837"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- App Name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chicken"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Chicken Products Grid -->
    <ScrollView
        android:id="@+id/scrollViewProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLayout"
        android:layout_above="@+id/bottomNavigation"
        android:padding="16dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/gridLayoutProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Chickenjoy Bucket -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChickenjoyBucket"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Product Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/chicken_bucket" />

                        <!-- Product Name -->
                        <TextView
                            android:id="@+id/tvChickenjoyBucket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chickenjoy Bucket"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <!-- Product Price -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱299.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <!-- Quantity Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <!-- Quantity Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity:"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginEnd="8dp" />

                            <!-- Quantity EditText -->
                            <EditText
                                android:id="@+id/etQuantityBucket"
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:text="1"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@drawable/edittext_border"
                                android:padding="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Add to Cart Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddToCartBucket"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"
                            app:backgroundTint="#E31837"
                            app:cornerRadius="8dp"
                            android:text="Add to Cart"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 1-pc Chickenjoy -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChickenjoy1pc"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/chicken_1pc" />

                        <TextView
                            android:id="@+id/tvChickenjoy1pc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1-pc Chickenjoy"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱89.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <!-- Quantity Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity:"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginEnd="8dp" />

                            <EditText
                                android:id="@+id/etQuantity1pc"
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:text="1"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@drawable/edittext_border"
                                android:padding="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Add to Cart Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddToCart1pc"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"
                            app:backgroundTint="#E31837"
                            app:cornerRadius="8dp"
                            android:text="Add to Cart"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 2-pc Chickenjoy -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChickenjoy2pc"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/chicken_2pc" />

                        <TextView
                            android:id="@+id/tvChickenjoy2pc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2-pc Chickenjoy"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱159.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <!-- Quantity Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity:"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginEnd="8dp" />

                            <EditText
                                android:id="@+id/etQuantity2pc"
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:text="1"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@drawable/edittext_border"
                                android:padding="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Add to Cart Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddToCart2pc"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"
                            app:backgroundTint="#E31837"
                            app:cornerRadius="8dp"
                            android:text="Add to Cart"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Spaghetti with Chicken -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSpaghettiChicken"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/spaghetti_chicken" />

                        <TextView
                            android:id="@+id/tvSpaghettiChicken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Spaghetti w/ Chicken"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱129.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <!-- Quantity Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity:"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginEnd="8dp" />

                            <EditText
                                android:id="@+id/etQuantitySpaghetti"
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:text="1"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@drawable/edittext_border"
                                android:padding="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Add to Cart Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddToCartSpaghetti"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"
                            app:backgroundTint="#E31837"
                            app:cornerRadius="8dp"
                            android:text="Add to Cart"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- Back Button at Bottom of Grid -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="#666666"
                app:cornerRadius="8dp"
                android:text="Back to Menu"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation (Cart + Back) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Footer Cart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F9FA"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Cart Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Total Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Items:"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTotalItems"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Total Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Cost:"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱0.00"
                            android:textColor="#E31837"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Checkout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:backgroundTint="#E31837"
                    app:cornerRadius="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Checkout"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>