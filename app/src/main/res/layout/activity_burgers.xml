<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BurgersActivity">

    <!-- Header/Navbar -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E31837"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- App Name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Burgers"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Burger Products Grid -->
    <ScrollView
        android:id="@+id/scrollViewProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLayout"
        android:layout_above="@+id/bottomNavigation"
        android:padding="16dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/gridLayoutProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Yumburger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardYumburger"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Product Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/yumburger" />

                        <!-- Product Name -->
                        <TextView
                            android:id="@+id/tvYumburger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yumburger"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <!-- Product Price -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱39.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <!-- Quantity Controls -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <!-- Minus Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMinusYumburger"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#F44336"
                                app:cornerRadius="15dp"
                                android:text="-"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!-- Quantity Display -->
                            <TextView
                                android:id="@+id/tvQuantityYumburger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="12dp" />

                            <!-- Add Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddYumburger"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#4CAF50"
                                app:cornerRadius="15dp"
                                android:text="+"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Cheesy Yumburger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCheesyYumburger"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/cheesy_yumburger" />

                        <TextView
                            android:id="@+id/tvCheesyYumburger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cheesy Yumburger"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱49.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMinusCheesy"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#F44336"
                                app:cornerRadius="15dp"
                                android:text="-"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvQuantityCheesy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddCheesy"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#4CAF50"
                                app:cornerRadius="15dp"
                                android:text="+"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Bacon Cheesy Yumburger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBaconCheesy"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/bacon_cheesy_yumburger" />

                        <TextView
                            android:id="@+id/tvBaconCheesy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bacon Cheesy Yumburger"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱59.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMinusBacon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#F44336"
                                app:cornerRadius="15dp"
                                android:text="-"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvQuantityBacon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddBacon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#4CAF50"
                                app:cornerRadius="15dp"
                                android:text="+"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Champ Burger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChampBurger"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="#F8F9FA"
                            android:src="@mipmap/champ_burger" />

                        <TextView
                            android:id="@+id/tvChampBurger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Champ Burger"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₱99.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E31837"
                            android:layout_marginTop="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMinusChamp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#F44336"
                                app:cornerRadius="15dp"
                                android:text="-"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvQuantityChamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddChamp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#4CAF50"
                                app:cornerRadius="15dp"
                                android:text="+"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- Back Button at Bottom of Grid -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="#666666"
                app:cornerRadius="8dp"
                android:text="Back to Menu"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation (Cart + Back) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Footer Cart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F9FA"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Cart Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Total Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Items:"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTotalItems"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Total Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Cost:"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱0.00"
                            android:textColor="#E31837"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Checkout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:backgroundTint="#E31837"
                    app:cornerRadius="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Checkout"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>